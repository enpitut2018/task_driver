    <%= form.label :note %>
    <%= form.text_area :note, id: :task_note %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.number_field :status, id: :task_status %>
  </div>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time, id: :task_start_time %>
  </div>

  <div class="field">
    <%= form.label :finish_time %>
