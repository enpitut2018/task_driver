<p id="notice"><%= notice %></p>

<h1>タスク</h1>

<table>
  <thead>
    <tr>
      <th>タスク名</th>
      <th>締め切り</th>
      <th>重要度</th>
      <th>メモ</th>
      <th>進捗</th>
      <th>始めた時刻</th>
      <th>終わった時刻</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%= search_form_for @q do |f| %>

    # nameが入力テキストを含むレコードを検索
    <%= f.label :name_cont, "namae" %>
    <%= f.search_field :name_cont %>
    <%= f.submit %>
  <% end %>

  <% if @results.empty? %>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.deadline %></td>
        <td><%= task.importance %></td>
        <td><%= task.note %></td>
        <td><%= task.status %></td>
        <td><%= task.start_time %></td>
        <td><%= task.finish_time %></td>
        <td><%= link_to '詳細を見る', task %></td>
        <td><%= link_to 'このタスクを編集する', edit_task_path(task) %></td>
        <td><%= link_to 'このタスクを削除する', task, method: :delete, data: { confirm: 'ほんとに?' } %></td>
      </tr>
    <% end %>
  <% else %>
    <% @results.each do |result| %>
      <tr>
        <td><%= result.name %></td>
        <td><%= result.deadline %></td>
        <td><%= result.importance %></td>
        <td><%= result.note %></td>
        <td><%= result.status %></td>
        <td><%= result.start_time %></td>
        <td><%= result.finish_time %></td>
        <td><%= link_to '詳細を見る', result %></td>
        <td><%= link_to 'このタスクを編集する', edit_task_path(result) %></td>
        <td><%= link_to 'このタスクを削除する', result, method: :delete, data: { confirm: 'ほんとに?' } %></td>
      </tr>  
    <% end %>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しいタスクを作る', new_task_path %>
