<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Deadline</th>
      <th>Importance</th>
      <th>Note</th>
      <th>Status</th>
      <th>Start time</th>
      <th>Finish time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%= search_form_for @q do |f| %>

    # nameが入力テキストを含むレコードを検索
    <%= f.label :name_cont, "namae" %>
    <%= f.search_field :name_cont %>
    <%= f.submit %>
  <% end %>

  <% if @results.empty? %>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.deadline %></td>
        <td><%= task.importance %></td>
        <td><%= task.note %></td>
        <td><%= task.status %></td>
        <td><%= task.start_time %></td>
        <td><%= task.finish_time %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  <% else %>
    <% @results.each do |result| %>
      <tr>
        <td><%= result.name %></td>
        <td><%= result.deadline %></td>
        <td><%= result.importance %></td>
        <td><%= result.note %></td>
        <td><%= result.status %></td>
        <td><%= result.start_time %></td>
        <td><%= result.finish_time %></td>
        <td><%= link_to 'Show', result %></td>
        <td><%= link_to 'Edit', edit_task_path(result) %></td>
        <td><%= link_to 'Destroy', result, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>  
    <% end %>
  <% end %>

  <script>
    
  </tbody>
</table>

