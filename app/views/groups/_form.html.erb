  <div class="field">
    <%= form.label :重要度 %>
    <%= form.select :importance, [["☆", 1],["☆☆", 2], ["☆☆☆", 3], ["☆☆☆☆", 4], ["☆☆☆☆☆", 5]] %>
  </div>

  <div class="field">
    <%= form.label :締め切り %>
    <%= form.datetime_select :deadline, id: :group_deadline %>
  </div>

